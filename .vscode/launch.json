    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${workspaceFolder}/tests"],
            "console": "integratedTerminal"
        },
        {
            "name": "HardPy: Init",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.hardpy",
            "console": "integratedTerminal",
            "args": ["init", "template"]
        },
        {
            "name": "HardPy: Run",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.hardpy",
            "console": "integratedTerminal",
            "args": ["run", "template"]
        },
        {
            "name": "Python: Example Hello HardPy",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.hardpy",
            "console": "integratedTerminal",
            "args": ["run", "examples/project/hello_hardpy"]
        },
        {
            "name": "Python: Example CouchDB load",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.hardpy",
            "console": "integratedTerminal",
            "args": ["run", "examples/project/couchdb_load"]
        },
        {
            "name": "Python: Example Minute parity",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.hardpy",
            "console": "integratedTerminal",
            "args": ["run", "examples/project/minute_parity"]
        },
        {
            "name": "Python: Example Dialog box",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.hardpy",
            "console": "integratedTerminal",
            "args": ["run", "examples/project/dialog_box"]
        }
    ]
}
